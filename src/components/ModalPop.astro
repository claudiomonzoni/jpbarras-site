<style lang="scss">
  @import "../estilos/_variables.scss";
  /* The Modal (background) */
  .modal {
    display: none; /* Hidden by default */
    position: fixed; /* Stay in place */
    z-index: 1; /* Sit on top */
    left: 0;
    top: 0;
    width: 100%; /* Full width */
    height: 100%; /* Full height */
    overflow: auto; /* Enable scroll if needed */
    background-color: rgb(0, 0, 0); /* Fallback color */
    background-color: rgba(0, 0, 0, 0.4); /* Black w/ opacity */
}

/* Modal Content */
.modal-content {
    background-color: #fefefe;
    margin: auto;
    padding: 3rem;
    width: 50%;
    text-align: center;
    position: relative;
    top: 50%;
    transform: translateY(-50%);

    background: url('fondo-a-modal.png') $verde;
    background-repeat: no-repeat;
    background-position: top right;
    background-size: contain;

    

    @include cel {
      width: 80%;
    }
    h2 {
      color: white;
      span {
        color: $negro;
      }
    }
  }
  .redes {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    background: url('fondo-b-modal.svg') white;
    background-repeat: no-repeat;
    background-position: top right;
    background-size: contain;
    @include cel {
        
        background-position: 60% 0%;
        background-size: 160%;
    }
    padding: 2rem;
    margin: 0 auto;
    gap: 2rem;
    width: 80%;

    -webkit-box-shadow: 15px 15px 0px 1px rgba(0, 0, 0, 0.75);
    -moz-box-shadow: 15px 15px 0px 1px rgba(0, 0, 0, 0.75);
    box-shadow: 15px 15px 0px 1px rgba(0, 0, 0, 0.75);
    .red {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      img {
        max-width: 2rem;
        padding-bottom: 1rem;
      }
    }
  }

  p {
      padding-top: 2rem;
      width: 70%;
      margin: 0 auto;
  }
  /* The Close Button */
  .close {
    position: absolute;
    top: 0;
    right: 1rem;
    color: $negro;
    float: right;
    font-size: 2rem;
    font-weight: bold;
  }

  .close:hover,
  .close:focus {
    color: white;
    text-decoration: none;
    cursor: pointer;
  }
</style>

<body>
  <script>
    // Get the modal
    var modal = document.getElementById("myModal");

    // Get the button that opens the modal
    var btn = document.getElementById("myBtn");

    // Get the <span> element that closes the modal
    var span = document.getElementsByClassName("close")[0];

    // When the user clicks the button, open the modal
    window.onload = () => {
      const tiempo = setTimeout(() => {
        modal.style.display = "block";
        console.log("hola");
      }, 4000);
    };

    // When the user clicks on <span> (x), close the modal
    span.addEventListener("click", () => {
      modal.style.display = "none";
    });
    // When the user clicks anywhere outside of the modal, close it
    window.addEventListener("click", (event) => {
      if (event.target == modal) {
        modal.style.display = "none";
      }
    });
  </script></body
