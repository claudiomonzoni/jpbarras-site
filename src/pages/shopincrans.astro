---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import BannerNav from "../components/BannerNav.astro";

import i18next, { t, changeLanguage } from "i18next";

changeLanguage("fr");
---

<Layout
  title="J.P. Barras Electricité SA | Shop in Crans"
  description="Plus de 10'000 articles, un service de qualité et personnalisé"
>
  <Hero
    encabezado="Shop in Crans"
    parrafo="<b>Plus de 10'000 articles, un service de qualité et personnalisé</b>, voici ce que vous trouverez dans notre magasin de 600m2 Shop in Crans au centre de la station de Crans Montana. "
    imagenurl="/shop-in-crans-home.webp"
    home="false"
  />

  <div class="bandeja">
    <div id="shop">
      
      </div>


    <BannerNav
      encabezado="Services"
      parrafo="Nous offrons également, au sein de notre magasin Shop in Crans..."
      liga="/services"
      imagen="/services-main-section.webp"
    />
  </div>
</Layout>

<style lang="scss">
  @import "../estilos/_variables.scss";

  
</style>
